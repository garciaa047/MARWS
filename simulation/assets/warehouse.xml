<mujoco model="warehouse">
  <compiler angle="radian" meshdir="meshes"/>

  <option timestep="0.002" gravity="0 0 -9.81"/>

  <default>
    <joint damping="0.5" armature="0.1"/>
    <geom condim="3" friction="1 0.5 0.5"/>
    <default class="visual">
      <geom contype="0" conaffinity="0" group="1"/>
    </default>
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1=".3 .5 .7" rgb2="1 1 1" width="32" height="512"/>
    <texture name="floor_tex" type="2d" builtin="checker" rgb1="0.2 0.2 0.2" rgb2="0.3 0.3 0.3" width="512" height="512"/>
    <material name="floor_mat" texture="floor_tex" texrepeat="5 5"/>
    <material name="bin_mat" rgba="0.8 0.2 0.2 1"/>
    <material name="robot_mat" rgba="0.6 0.6 0.6 1"/>
    <material name="package_mat" rgba="1 0.3 0.3 1"/>
  </asset>

  <worldbody>
    <!-- Floor -->
    <geom name="floor" type="plane" size="2 2 0.1" material="floor_mat"/>

    <!-- Bin -->
    <body name="bin_A" pos="0.25 -0.15 0.05">
      <geom name="bin_A_base" type="box" size="0.15 0.15 0.05" rgba="0.4 0.4 0.4 1"/>
      <geom name="bin_A_wall1" type="box" size="0.15 0.01 0.08" pos="0 0.14 0.13" rgba="0.5 0.5 0.5 1"/>
      <geom name="bin_A_wall2" type="box" size="0.15 0.01 0.08" pos="0 -0.14 0.13" rgba="0.5 0.5 0.5 1"/>
      <geom name="bin_A_wall3" type="box" size="0.01 0.15 0.08" pos="0.14 0 0.13" rgba="0.5 0.5 0.5 1"/>
      <geom name="bin_A_wall4" type="box" size="0.01 0.15 0.08" pos="-0.14 0 0.13" rgba="0.5 0.5 0.5 1"/>
    </body>

    <!-- 6-DOF Robot Arm -->
    <body name="robot_base" pos="0 0 0.05">
      <geom name="base_geom" type="cylinder" size="0.08 0.05" material="robot_mat"/>

      <!-- Joint 1: Base rotation (yaw) -->
      <body name="link1" pos="0 0 0.05">
        <joint name="joint1" type="hinge" axis="0 0 1" range="-3.14 3.14"/>
        <geom name="link1_geom" type="cylinder" size="0.05 0.1" material="robot_mat"/>

        <!-- Joint 2: Shoulder (pitch) -->
        <body name="link2" pos="0 0 0.1">
          <joint name="joint2" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
          <geom name="link2_geom" type="capsule" size="0.04" fromto="0 0 0 0 0 0.32" material="robot_mat"/>

          <!-- Joint 3: Elbow (pitch) -->
          <body name="link3" pos="0 0 0.32">
            <joint name="joint3" type="hinge" axis="0 1 0" range="-2.5 2.5"/>
            <geom name="link3_geom" type="capsule" size="0.035" fromto="0 0 0 0 0 0.28" material="robot_mat"/>

            <!-- Joint 4: Wrist 1 (pitch) -->
            <body name="link4" pos="0 0 0.28">
              <joint name="joint4" type="hinge" axis="0 1 0" range="-3.14 3.14"/>
              <geom name="link4_geom" type="capsule" size="0.03" fromto="0 0 0 0 0 0.15" material="robot_mat"/>

              <!-- Joint 5: Wrist 2 (yaw) -->
              <body name="link5" pos="0 0 0.15">
                <joint name="joint5" type="hinge" axis="0 0 1" range="-3.14 3.14"/>
                <geom name="link5_geom" type="cylinder" size="0.025 0.03" material="robot_mat"/>

                <!-- Joint 6: Wrist 3 (roll) -->
                <body name="link6" pos="0 0 0.03">
                  <joint name="joint6" type="hinge" axis="0 1 0" range="-3.14 3.14"/>
                  <geom name="link6_geom" type="cylinder" size="0.02 0.02" material="robot_mat"/>

                  <!-- Gripper Base -->
                  <body name="gripper_base" pos="0 0 0.02">
                    <geom name="gripper_base_geom" type="box" size="0.03 0.05 0.01" material="robot_mat"/>

                    <!-- Left Finger (closer starting position for firm grip) -->
                    <body name="finger_left" pos="0 0.02 0.01">
                      <joint name="finger_left_joint" type="slide" axis="0 1 0" range="0 0.04"/>
                      <geom name="finger_left_geom" type="box" size="0.01 0.01 0.04" material="robot_mat" friction="3 1.5 1.5"/>
                    </body>

                    <!-- Right Finger -->
                    <body name="finger_right" pos="0 -0.02 0.01">
                      <joint name="finger_right_joint" type="slide" axis="0 -1 0" range="0 0.04"/>
                      <geom name="finger_right_geom" type="box" size="0.01 0.01 0.04" material="robot_mat" friction="3 1.5 1.5"/>
                    </body>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>

    <!-- Table (moved closer to robot for easier reach) -->
    <body name="table" pos="0.28 0.18 0.15">
      <geom name="table_top" type="box" size="0.12 0.12 0.01" rgba="0.5 0.4 0.3 1"/>
      <geom name="table_leg1" type="cylinder" size="0.02 0.14" pos="-0.08 -0.08 -0.15" rgba="0.5 0.4 0.3 1"/>
      <geom name="table_leg2" type="cylinder" size="0.02 0.14" pos="0.08 -0.08 -0.15" rgba="0.5 0.4 0.3 1"/>
      <geom name="table_leg3" type="cylinder" size="0.02 0.14" pos="-0.08 0.08 -0.15" rgba="0.5 0.4 0.3 1"/>
      <geom name="table_leg4" type="cylinder" size="0.02 0.14" pos="0.08 0.08 -0.15" rgba="0.5 0.4 0.3 1"/>
    </body>

    <!-- Package (moved with table) -->
    <body name="package_0" pos="0.28 0.18 0.175">
      <freejoint name="package_0_joint"/>
      <geom name="package_0_geom" type="box" size="0.015 0.015 0.015" mass="0.03" material="package_mat" friction="2.5 1 1"/>
    </body>

  </worldbody>

  <!-- Couple both finger joints so they move together -->
  <equality>
    <joint joint1="finger_left_joint" joint2="finger_right_joint" polycoef="0 1 0 0 0"/>
  </equality>

  <actuator>
    <velocity name="joint1_vel" joint="joint1" kv="50"/>
    <velocity name="joint2_vel" joint="joint2" kv="50"/>
    <velocity name="joint3_vel" joint="joint3" kv="50"/>
    <velocity name="joint4_vel" joint="joint4" kv="30"/>
    <velocity name="joint5_vel" joint="joint5" kv="30"/>
    <velocity name="joint6_vel" joint="joint6" kv="20"/>
    <position name="gripper_ctrl" joint="finger_left_joint" kp="200"/>
  </actuator>
</mujoco>
